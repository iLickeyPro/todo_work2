<div class="modal" id="addListModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <%= form_tag("/posts/create") do %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Input New TODO List</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="FormControlText">Name</label>
            <input type="text" class="form-control" id="FormControlText" rows="3" name="name" required/>
          </div>
          <div class="form-group">
            <label for="FormControlTextarea">What should you do?</label>
            <textarea class="form-control" id="FormControlTextarea" rows="3" name="content" required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Add</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if @message=="S" then %>
  <div class="alert alert-success" role="alert">
    Update Success.
  </div>
<% elsif @message=="F" then %>
  <div class="alert alert-danger" role="alert">
    Update Failure.
  </div>
<% else %>
  <div class="alert" role="alert">
  </div>
<% end %>

<div class="container">
  <div id="area" class="row">
    <div id="todo" class="col-sm-6">
      <h2>TODO</h2>
      <div class="list">
        <% @todo.each do |post| %>
        <!-- これを繰り返す -->
        <div class="card">
          <div class="card-body">
            <pre class="card-text"><%= post.content %></pre>
            <h6 class="card-subtitle mb-2 text-muted text-right"><%= post.name %></h6>
            <div class="container">
              <div class="text-right">
                <%= link_to("/posts/#{post.id}") do %>
                  <button type="button" class="btn btn-link col-sm-3">Edit</button>
                <% end %>
                <%= link_to("/posts/#{post.id}/move") do %>
                  <button type="button" class="btn btn-success">DONE</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!-- ここまで -->
        <% end %>
      </div>
    </div>

    <div id="done" class="col-sm-6">
      <h2>DONE</h2>
      <div class="list">
        <% @done.each do |post| %>
        <!-- これを繰り返す -->
        <div class="card">
          <div class="card-body">
            <pre class="card-text"><%= post.content %></pre>
            <h6 class="card-subtitle mb-2 text-muted text-right"><%= post.name %></h6>
            <div class="container">
              <div class="text-right">
                <%= link_to("/posts/#{post.id}") do %>
                  <button type="button" class="btn btn-link col-sm-3">Edit</button>
                <% end %>
                <%= link_to("/posts/#{post.id}/move") do %>
                  <button type="button" class="btn btn-warning">TODO</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!-- ここまで -->
        <% end %>
      </div>
    </div>
  </div>
</div>
